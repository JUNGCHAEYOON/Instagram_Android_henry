<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/whitebluegreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_original_margin"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/login_btn_option"
                android:layout_width="@dimen/login_option_size"
                android:layout_height="@dimen/login_option_size"
                android:src="@drawable/ic_action_option"
                app:tint="@color/black" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_ic_size"
            android:layout_marginTop="70dp"
            android:src="@drawable/ic_insta" />

        <LinearLayout
            android:visibility="visible"
            android:padding="@dimen/activity_original_margin"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/login_iv_profile"
                android:layout_width="@dimen/login_profile_size"
                android:layout_height="@dimen/login_profile_size"
                android:src="@drawable/ic_action_profile"/>
            <TextView
                android:id="@+id/login_tv_username"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_nickname"/>
        </LinearLayout>

        <TextView
            android:id="@+id/login_btn_anotheraccount"
            android:background="@drawable/back_stroke_black"
            android:layout_marginTop="@dimen/activity_original_margin"
            android:padding="@dimen/activity_original_margin"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="다른 계정으로 로그인"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/login_btn_newaccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="새 계정 만들기"/>
        <ImageView
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:src="@drawable/ic_meta_logo_"
            app:tint="@color/deepdeepdeepgrey" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>